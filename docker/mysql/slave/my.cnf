[mysqld]
# Server ID is handled by command line in docker-compose
# server-id=2

# Relay log
relay-log=mysql-relay-bin
log_replica_updates=ON  # Fixed deprecated warning

# GTID
gtid_mode=ON
enforce_gtid_consistency=ON

# Performance
innodb_buffer_pool_size=256M
max_connections=500

# Networking
bind-address=0.0.0.0

# Character set
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci

# REMOVED: read_only=ON (Will be enabled via setup-replication.sh)
# REMOVED: super_read_only=ON (Will be enabled via setup-replication.sh)
